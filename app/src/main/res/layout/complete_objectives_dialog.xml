<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    style="@style/Theme.MaterialComponents.Light.Dialog">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/complete_objectives_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/completed_objectives_title"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_margin="@dimen/nav_header_vertical_spacing"/>

    <ListView
        android:id="@+id/complete_objectives_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complete_objectives_dialog_text"
        android:layout_margin="@dimen/nav_header_vertical_spacing"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/complete_objectives_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complete_objectives_listView"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/button_margin"
        android:text="@string/close_text"/>

</RelativeLayout>